using System;

namespace ejerciciosSemana2
{
    class Program
    {
        static void Main(string[] args)
        {
            //Investigue la forma de implementacion de la instruccion foreach
            //dentro de un programa y desarrolle un ejemplo en C#

            string curso = "Alexander";

            foreach (char letra in curso)
            {
                Console.Write(" " + letra + " ");
            }

            //no cerrar consola
            Console.ReadLine();
        }

    }



